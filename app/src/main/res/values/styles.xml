<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="myTransparent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AnimTools" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>


    <style name="et_number">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="et_radix">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_36</item>
    </style>


    <style name="et_pass">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="tv_name">
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>


    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>


    <style name="iv_32">
        <item name="android:layout_width">@dimen/dp_32</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/arrows_b_l</item>
    </style>
    
    <style name="btn_next">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">@dimen/dp_20</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>


    <style name="v_h">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:background">#e000</item>
    </style>

    <style name="v_w">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.1</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:background">#e000</item>
    </style>

    <style name="ll_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
