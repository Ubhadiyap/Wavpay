<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="@color/line_horizontal"
                android:startColor="@color/line_horizontal" />

            <corners
                android:topLeftRadius="@dimen/corner_bg"
                android:topRightRadius="@dimen/corner_bg" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="@color/bg_title"
                android:startColor="@color/bg_title" />

            <corners
                android:topLeftRadius="@dimen/corner_bg"
                android:topRightRadius="@dimen/corner_bg" />
        </shape>
    </item>

</layer-list>