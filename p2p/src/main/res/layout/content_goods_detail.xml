<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_goods_detail_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="60dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hbyundu.shop.ui.goods.detail.GoodsDetailActivity"
    tools:showIn="@layout/activity_goods_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include layout="@layout/content_goods_detail_name" />

        <View
            style="@style/HorizontalDivideStyle"
            android:layout_height="10dp" />

        <include layout="@layout/content_goods_detail_tag" />

        <View
            android:id="@+id/content_goods_detail_tag_divider"
            style="@style/HorizontalDivideStyle"
            android:layout_height="10dp" />

        <include
            layout="@layout/content_goods_detail_specifications"
            android:visibility="gone" />

        <View
            style="@style/HorizontalDivideStyle"
            android:layout_height="10dp" />

        <include layout="@layout/content_goods_detail_description" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
