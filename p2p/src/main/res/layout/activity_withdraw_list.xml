<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootViewStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hbyundu.shop.ui.credit.withdraw.WithDrawListActivity">

    <include layout="@layout/view_title_bar" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/activity_withdraw_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="2dp"
        android:fastScrollEnabled="true"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:smoothScrollbar="true"
        app:ptrHeaderSubTextColor="@color/text_gray"
        app:ptrHeaderTextColor="@color/text_gray"
        app:ptrShowIndicator="false" />

</LinearLayout>
