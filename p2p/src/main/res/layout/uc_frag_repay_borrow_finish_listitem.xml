<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ucFraBowFinList_tv_subname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="福州群升国际个人房产"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ucFraBowFinList_tv_publis_time_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-06-15 14:39"
            android:visibility="invisible"
            android:textColor="@color/text_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interest_rate"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/ucFraREpBorFinList_tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.00%"
                android:textColor="@color/text_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/term"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/ucFraREpBorFinList_tv_repay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="3个月"
                android:textColor="@color/text_gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ucFraREpBorFinList_tv_borrow_amount_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.000.0"
            android:textColor="@color/text_orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            android:textColor="@color/text_gray" />
    </LinearLayout>

</LinearLayout>